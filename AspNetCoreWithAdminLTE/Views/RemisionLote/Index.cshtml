
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .campo {
        width: 350px;
    }

    .campofecha {
        width: 870px;
    }

    .campoobservaciones {
        width: 420px;
        height: 50px;
    }

    .telas {
        background-color: white;
        border-radius: 15px;
    }

    .margin2 {
        margin-left: 50px;
    }

    .margins {
        margin-left: 10px;
    }

    .campof {
        width: 328px;
    }

    .BotonR {
        width: 200px;
        color: white;
        background-color: #1ea0e8;
        margin-left: 10px;
    }

        .BotonR:hover {
            background-color: #246E97;
            color: white;
        }

    .encabezado {
        color: #246E97;
    }

    .colort {
