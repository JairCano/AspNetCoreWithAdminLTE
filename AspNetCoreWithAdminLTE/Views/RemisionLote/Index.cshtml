<div class="margins container">
    <div class="telas panel-heading">
        <div class="margin2">
            <br /><br />
            <h2>Remisiones de lote</h2>
            <br />
            <br />
            <div class="panel-body">
                <form id="form" class="form-horizontal" role="form">

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="ejemplo_email_3" class="col-md-4 control-label" name="nombre">Cantidad</label>

                            <div class="col-md-8">
                                <input class="form-control" name="text_nom1" id="text_nom1" required />
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="ejemplo_email_3" class="col-md-5 col-lg-4 control-label">Dirección</label>

                            <div class="col-md-7 col-lg-8">
                                <input class="form-control" name="text_nom2" id="text_nom2">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="ejemplo_email_3" class="col-md-4 control-label">Encargado</label>

                            <div class="col-md-8">
                                <input class="form-control" name="text_ape1" id="text_ape1">
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="ejemplo_email_3" class="col-md-5 col-lg-4 control-label">Fecha L</label>

                            <div class="form-group">
                                <label class="control-label"></label>
                                <input type="date" class="campof form-control" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="ejemplo_email_3" class="col-md-5 col-lg-4 control-label">Fecha S</label>
                            <select class="campo form-control" name="Proveedor">
                                <option>Americanino</option>
                                <option>Hilandia</option>
                            </select>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="ejemplo_email_3" class="col-md-5 col-lg-4 control-label">Observaciones</label>

                            <div class="col-md-7 col-lg-8">
                                <textarea type="text" class="campoobservaciones form-control" id="ejemplo_password_3" name="text_dep" id="text_dep"> </textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="ejemplo_email_3" class="col-md-5 col-lg-4 control-label">Tipo de remisión</label>
                                <select class="campo form-control" name="Tipo de prenda">
                                    <option>Remisión de Lavado</option>
                                    <option>Remisión de Bodega</option>
                                </select>
                            </div>
                        </div>

                    </div>
                    <br />

                    <div class="row">
                        <div class="col-sm-offset-5 col-sm-2 text-center">
                            <div class="btn-group" data-toggle="buttons">
                                <button type="button" id="btn_enviar" class="BotonR btn">Registrar Subfases</button>
                            </div>
                        </div>
                    </div>

                    <br /><br />

                </form>
            </div>
        </div>
    </div>
    <br /><br />
    <h3>Tabla Remisiones</h3>
    <br />
    <table class=" colort table table-bordered table-striped" id="tabla">
        <thead>
            <tr class="encabezado">
                <td>Id</td>
                <td>Cantidad</td>
                <td>Direccion</td>
                <td>Encargado</td>
                <td>Fecha L</td>
                <td>Fecha S</td>
                <td>Observaciones</td>
                <td>Tipo de Remisión</td>
                <td>Acciones</td>
            </tr>
        </thead>

        <tbody>
