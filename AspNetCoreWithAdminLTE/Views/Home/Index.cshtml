@{
    ViewData["Title"] = "";
}

<div class="row">
    <!-- Column -->
    <div class="col-md-6 col-lg-2 col-xlg-3">
        <div class="card card-hover">
            <div class="box bg-cyan text-center">
                <h1 class="font-light text-white">
                    <i class="mdi mdi-home"></i>
                </h1>
                <h6 class="text-white">Inicio</h6>
            </div>
        </div>
    </div>
    <!-- Column -->
    <div class="col-md-6 col-lg-4 col-xlg-3">
        <div class="card card-hover">


            <a asp-action="Index" asp-controller="Empleados">
                <div class="box bg-success text-center">
                    <h1 class="font-light text-white">
                        <i class="mdi mdi-account-multiple"></i>
                    </h1>

                    <h6 class="text-white">Empleados</h6>



                </div>
            </a>
        </div>
    </div>
    <!-- Column -->
    <div class="col-md-6 col-lg-2 col-xlg-3">
        <div class="card card-hover">
            <a asp-action="Index" asp-controller="Proveedores">
                <div class="box bg-warning text-center">
                    <h1 class="font-light text-white">
                        <i class="mdi mdi-account-star"></i>
                    </h1>
                    <h6 class="text-white">Proveedores</h6>
                </div>
            </a>
        </div>
    </div>
    <!-- Column -->
    <div class="col-md-6 col-lg-2 col-xlg-3">
        <div class="card card-hover">
            <a asp-action="Index" asp-controller="EntradaLote">
                <div class="box bg-danger text-center">
                    <h1 class="font-light text-white">
                        <i class="mdi mdi-cube-send"></i>
                    </h1>
                    <h6 class="text-white">Produccion</h6>
                </div>
            </a>
        </div>
    </div>
    <!-- Column -->
    <div class="col-md-6 col-lg-2 col-xlg-3">
        <div class="card card-hover">
            <a asp-action="Index" asp-controller="NovedadesProduccion">
                <div class="box bg-info text-center">
                    <h1 class="font-light text-white">
                        <i class="mdi mdi-tooltip-text"></i>
                    </h1>
                    <h6 class="text-white">Novedades</h6>
                </div>
            </a>
        </div>
    </div>
    <!-- Column -->
    <!-- Column -->
    <div class="col-md-6 col-lg-12 col-xlg-3">
        <div class="card card-hover">
            <a asp-action="Index" asp-controller="Reportes">
                <div class="box bg-danger text-center">
                    <h1 class="font-light text-white">
                        <i class="mdi mdi-comment-alert"></i>
                    </h1>
                    <h6 class="text-white">Reportes</h6>
                </div>
            </a>
        </div>
    </div>

</div>
